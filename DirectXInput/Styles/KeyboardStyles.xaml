<ResourceDictionary
    x:Class="ArnoldVinkStyles.KeyboardStyles"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Button Style -->
    <Style x:Key="ButtonKeyboard" TargetType="Button">
        <Setter Property="FontSize" Value="{DynamicResource TextSizeMedium}"/>
        <Setter Property="Foreground" Value="{DynamicResource ApplicationWhiteBrush}"/>
        <Setter Property="Background" Value="{DynamicResource ApplicationAccentLightBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ApplicationAccentLightBrush}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="MinWidth" Value="48"/>
        <Setter Property="Template" Value="{DynamicResource ButtonTemplateWhite}"/>
        <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisualStyleSolidWhite}"/>
    </Style>
    <Style x:Key="ButtonEmoji" TargetType="Button">
        <Setter Property="FontSize" Value="{DynamicResource TextSizeHuge}"/>
        <Setter Property="Foreground" Value="{DynamicResource ApplicationWhiteBrush}"/>
        <Setter Property="Background" Value="{DynamicResource ApplicationAccentLightBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ApplicationAccentLightBrush}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="4,0,0,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="MinHeight" Value="48"/>
        <Setter Property="MinWidth" Value="48"/>
        <Setter Property="Template" Value="{DynamicResource ButtonTemplateWhite}"/>
        <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisualStyleSolidWhite}"/>
    </Style>
</ResourceDictionary>